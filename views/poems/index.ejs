<%- include("../partials/header") %>

<section id="home">
    <section class="container">
		<h1 class="text-center display-1 rainbow-text font-galada">উদ্ভাবন</h1>
        <h4 class="text-center display-2 font-galada">আতাউর রহমানের কবিতা সমগ্র</h4>
        <div class="row justify-content-around">
			<% poems.forEach(function(poem){ %> 
				<div class="col-lg-5 content mb-2 mb-md-5">
              		<h1 class="text-center font-galada"> <%= poem.title %></h1>
					<p class="lead text-center font-galada"><%=poem.body%></p>
						<div class="container">
							<div class="container">
							  <div class="row justify-content-around button-spacing" style="margin-right: 10px;">
								<div class="col-2 button-center">
									<form action="/poems/<%=poem.id%>/likes" method="POST">
										<button id="like" class="btn btn-outline-danger">
											<i class="fas fa-heart"> <%= poem.likes.length === 0 ? '' : poem.likes.length%></i>
										</button>
									</form>
								</div>
								<div class="col-2 button-center">
									<form action="/poems/<%=poem.id%>/dislikes" method="POST">
										<button class="btn btn-outline-success">
											<i class="fas fa-thumbs-down"> <%= poem.dislikes.length === 0 ? '' : poem.dislikes.length%></i>
										</button>
									</form>
								</div>
								<div class="col-2 button-center">
									<a href="/poems/<%=poem._id%>">
										<button class="btn btn-outline-primary">
											<i class="fas fa-comment">  <%= poem.comments.length === 0 ? '' : poem.comments.length%></i>
										</button>
									</a>
								</div>
								<% if(currentUser && currentUser.name === "Ataur Rahaman"){ %> 
									<div class="col-2 button-center">
										<a href="/poems/<%=poem.id%>/edit">
											<button class="btn btn-outline-primary">
												Edit
											</button>
										</a>
									</div>
									<div class="col-2 button-center">
										<form id="delete" action="/poems/<%=poem.id%>?_method=DELETE" method="POST">
											<button class="btn btn-outline-primary" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
										</form>
									</div>
								<% } %>
							  </div>
							</div>
						</div>
            	</div> 
				<% }); %>
			</div>
		</section>
	</section>

<%- include("../partials/footer") %>